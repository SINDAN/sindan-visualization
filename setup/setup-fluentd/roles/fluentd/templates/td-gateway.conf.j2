# foward server
<match sindan.*>
  type forward

  <server>
    host localhost
    port 24224
  </server>

#  <secondary>
#    type file
#    path /var/log/td-agent/forward-failed
#  </secondary>

  flush_interval 1s
</match>

# debug
<match sindan.*>
  type file
  path /var/log/td-agent/debug.sindan.gateway.out
</match>

## match tag=debug.** and dump to console
<match debug.**>
  type stdout
</match>

