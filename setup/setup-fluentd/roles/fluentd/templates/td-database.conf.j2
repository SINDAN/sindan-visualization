# mysql
# https://github.com/tagomoris/fluent-plugin-mysql
<match sindan.log>
  type mysql
  host localhost
  # port 3306 # default
  database sindan_production
  username sindan
  password
  # TODO: set db information

  table diagnosis_logs
  # 'columns' names order must be same with 'key_names'
  key_names layer, log_group, log_type, log_campaign_uuid, result, detail, occurred_at
  columns layer, log_group, log_type, log_campaign_uuid, result, detail, occurred_at

  flush_interval 5s
</match>

<match sindan.log_campaign>
  type mysql
  host localhost
  # port 3306 # default
  database sindan_production
  username sindan
  password
  # TODO: set db information

  table log_campaigns
  # 'columns' names order must be same with 'key_names'
  key_names log_campaign_uuid, mac_addr, os, occurred_at
  columns log_campaign_uuid, mac_addr, os, occurred_at

  flush_interval 5s
</match>

# debug
<match sindan.*>
  type file
  path /var/log/td-agent/debug.sindan.out
</match>

